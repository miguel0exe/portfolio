---
import { Icon } from "astro-icon/components";

const stats = [
  // INT (Mana - Azul Místico)
  {
    label: "INT (Backend Logic)",
    val: "90%",
    color:
      "bg-blue-900 border border-blue-500/50 shadow-[0_0_10px_rgba(59,130,246,0.4)]",
  },

  // DEX (Stamina - Verde Bosque Oscuro)
  {
    label: "DEX (Frontend Reactivity)",
    val: "85%",
    color:
      "bg-emerald-900 border border-emerald-500/50 shadow-[0_0_10px_rgba(16,185,129,0.4)]",
  },

  // WIS (Arcane - Morado Profundo)
  {
    label: "WIS (System Architecture)",
    val: "80%",
    color:
      "bg-purple-900 border border-purple-500/50 shadow-[0_0_10px_rgba(168,85,247,0.4)]",
  },

  // CHA (Gold - Liderazgo)
  {
    label: "CHA (Team Leadership)",
    val: "85%",
    color:
      "bg-amber-700 border border-[#C8AA6E]/50 shadow-[0_0_10px_rgba(200,170,110,0.4)]",
  },
];

const buffs = [
  {
    name: "Clean Code",
    desc: "+50% Readability for future allies",
    icon: "mdi:feather",
  },
  {
    name: "Bug Hunter",
    desc: "Critical Hit chance against legacy code",
    icon: "mdi:spider-web",
  },
  {
    name: "Fast Learner",
    desc: "Reduces cooldown when learning new tech",
    icon: "mdi:book-open-page-variant",
  },
];
---

<section id="sobre-mi" class="py-24 relative overflow-hidden">
  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <h2 class="text-4xl text-center mb-16 text-[#C8AA6E] drop-shadow-md">
      <span class="text-2xl block text-[#a8a29e] mb-2 font-serif italic"
        >Rasgos de Personaje</span
      >
      ATRIBUTOS Y ORIGEN
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
      <div
        class="md:col-span-7 p-8 bg-[#1c1917] border border-[#44403c] relative group"
      >
        <div
          class="absolute top-0 left-0 w-3 h-3 border-t-2 border-l-2 border-[#C8AA6E]"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 w-3 h-3 border-b-2 border-r-2 border-[#C8AA6E]"
        >
        </div>

        <h3
          class="text-2xl font-cinzel text-[#e7e5e4] mb-4 border-b border-[#44403c] pb-2"
        >
          <Icon
            name="mdi:scroll"
            class="inline-block w-6 h-6 mr-2 text-[#C8AA6E]"
          />
          Historia de Origen
        </h3>

        <p
          class="text-[#a8a29e] font-serif text-lg leading-relaxed italic mb-4"
        >
          "Forjado en las aulas de la <span class="text-[#C8AA6E] font-bold"
            >UAM</span
          >, comencé mi viaje como un Artífice del Código hace más de 3 ciclos
          solares."
        </p>
        <p class="text-[#d6d3d1] font-serif text-lg leading-relaxed">
          Mi especialidad reside en conectar los reinos del <strong
            >Backend (Java)</strong
          > y el <strong>Frontend (React)</strong>. No solo escribo conjuros
          (código), construyo fortalezas (sistemas) diseñadas para resistir el
          paso del tiempo y escalar ante miles de usuarios.
        </p>
      </div>

      <div
        class="md:col-span-5 p-8 bg-[#0c0a09] border border-[#C8AA6E]/30 relative"
      >
        <h3 class="text-xl font-cinzel text-[#C8AA6E] mb-6 text-center">
          Estadísticas Base
        </h3>

        <div class="space-y-5">
          {
            stats.map((stat) => (
              <div>
                <div class="flex justify-between text-xs font-bold text-[#a8a29e] mb-1 uppercase tracking-widest">
                  <span>{stat.label}</span>
                  <span class="text-[#C8AA6E]">{stat.val}</span>
                </div>
                <div class="h-3 bg-[#0c0a09] border border-[#44403c] p-0.5">
                  <div
                    class={`h-full ${stat.color} relative`}
                    style={`width: ${stat.val}`}
                  >
                    <div class="absolute top-0 left-0 right-0 h-[1px] bg-white/20" />
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div
        class="md:col-span-4 p-6 bg-[#1c1917] border border-[#44403c] flex flex-col items-center text-center hover:border-[#C8AA6E] transition-colors"
      >
        <div
          class="p-4 rounded-full border border-[#C8AA6E]/20 bg-black/40 mb-4"
        >
          <Icon name="mdi:bank" class="w-10 h-10 text-[#C8AA6E]" />
        </div>
        <h3 class="text-lg font-cinzel text-[#e7e5e4] mb-1">La Academia</h3>
        <p class="text-[#C8AA6E] font-bold text-sm tracking-wide mb-2">
          UAM CUAJIMALPA
        </p>
        <p class="text-[#a8a29e] font-serif italic text-sm">
          Ingeniería en Computación<br />2019 - 2022
        </p>
      </div>

      <div
        class="md:col-span-8 p-6 bg-[#1c1917] border border-[#44403c] relative overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/black-scales.png')] opacity-20"
        >
        </div>

        <h3 class="text-lg font-cinzel text-[#e7e5e4] mb-4 relative z-10">
          Habilidades Pasivas
        </h3>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 relative z-10">
          {
            buffs.map((buff) => (
              <div class="flex items-start gap-3 p-3 bg-[#0c0a09]/80 border border-[#44403c] hover:border-[#C8AA6E]/50 transition-colors">
                <Icon
                  name={buff.icon}
                  class="w-6 h-6 text-[#C8AA6E] mt-1 shrink-0"
                />
                <div>
                  <p class="text-[#e7e5e4] font-bold text-sm font-cinzel">
                    {buff.name}
                  </p>
                  <p class="text-[#78716c] text-xs font-serif italic">
                    {buff.desc}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  /* Script para el efecto Spotlight en las tarjetas de About */
  const cards = document.querySelectorAll(".spotlight-card");

  cards.forEach((card) => {
    const htmlCard = card as HTMLElement;
    htmlCard.addEventListener("mousemove", (e) => {
      const rect = htmlCard.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      htmlCard.style.setProperty("--mouse-x", `${x}px`);
      htmlCard.style.setProperty("--mouse-y", `${y}px`);
    });
  });

  /* Script para la animación de entrada (Scroll Reveal) */
  const observerOptions = { root: null, rootMargin: "0px", threshold: 0.1 };
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.remove("opacity-0", "translate-y-8");
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document
    .querySelectorAll(".reveal-item")
    .forEach((el) => observer.observe(el));
</script>
