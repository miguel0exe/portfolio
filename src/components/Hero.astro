---
import { Icon } from "astro-icon/components";
---

<section
  class="min-h-screen flex items-center justify-center relative overflow-hidden py-20"
>
  <div
    class="absolute w-[500px] h-[500px] border border-[#C8AA6E]/20 rounded-full animate-spin-slow duration-[60s]"
  >
  </div>
  <div
    class="absolute w-[450px] h-[450px] border border-[#C8AA6E]/10 rounded-full border-dashed animate-spin-reverse duration-[40s]"
  >
  </div>

  <div class="relative z-10 max-w-4xl mx-auto text-center px-6">
    <div
      class="inline-flex items-center gap-2 px-4 py-2 rounded border border-[#C8AA6E]/50 bg-[#1c1917]/80 text-[#C8AA6E] mb-8 backdrop-blur-sm shadow-[0_0_15px_rgba(200,170,110,0.2)]"
    >
      <Icon name="mdi:shield-star" class="w-5 h-5" />
      <span class="font-bold tracking-widest text-sm">ARTÍFICE NIVEL 3</span>
    </div>

    <h1
      class="text-5xl md:text-7xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-b from-[#F3E5AB] via-[#C8AA6E] to-[#8B7355] drop-shadow-sm"
    >
      Miguel Ángel
    </h1>

    <h2 class="text-2xl md:text-3xl text-[#a8a29e] mb-8 font-light italic">
      "Arquitecto Full Stack del Reino Digital"
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-2xl mx-auto">
      <div
        class="p-3 border border-[#C8AA6E]/30 bg-[#1c1917]/50 rounded flex flex-col items-center gap-2 hover:border-[#C8AA6E] transition-colors group"
      >
        <Icon
          name="mdi:language-java"
          class="w-8 h-8 text-[#a8a29e] group-hover:text-[#C8AA6E]"
        />
        <span class="text-xs tracking-widest text-[#C8AA6E]">JAVA MAGIC</span>
      </div>
      <div
        class="p-3 border border-[#C8AA6E]/30 bg-[#1c1917]/50 rounded flex flex-col items-center gap-2 hover:border-[#C8AA6E] transition-colors group"
      >
        <Icon
          name="mdi:react"
          class="w-8 h-8 text-[#a8a29e] group-hover:text-cyan-400"
        />
        <span class="text-xs tracking-widest text-[#C8AA6E]">REACT SPELLS</span>
      </div>
      <div
        class="p-3 border border-[#C8AA6E]/30 bg-[#1c1917]/50 rounded flex flex-col items-center gap-2 hover:border-[#C8AA6E] transition-colors group"
      >
        <Icon
          name="mdi:database"
          class="w-8 h-8 text-[#a8a29e] group-hover:text-yellow-500"
        />
        <span class="text-xs tracking-widest text-[#C8AA6E]">DATA SCROLLS</span>
      </div>
      <div
        class="p-3 border border-[#C8AA6E]/30 bg-[#1c1917]/50 rounded flex flex-col items-center gap-2 hover:border-[#C8AA6E] transition-colors group"
      >
        <Icon
          name="simple-icons:nestjs"
          class="w-8 h-8 text-[#a8a29e] group-hover:text-blue-500"
        />
        <span class="text-xs tracking-widest text-[#C8AA6E]">
          NESTJS RITUALS
        </span>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row justify-center gap-6">
      <a
        href="#proyectos"
        class="relative px-8 py-3 bg-[#292524] text-[#C8AA6E] border border-[#C8AA6E] font-bold tracking-widest hover:bg-[#C8AA6E] hover:text-[#0c0a09] transition-all duration-300 group"
      >
        <span
          class="absolute inset-0 border border-[#C8AA6E] blur-[2px] opacity-50 group-hover:opacity-100 transition-opacity"
        ></span>
        INSPECCIONAR INVENTARIO
      </a>

      <a
        href="/cv.pdf"
        class="px-8 py-3 text-[#a8a29e] hover:text-white border-b border-transparent hover:border-[#C8AA6E] transition-all flex items-center justify-center gap-2 font-serif italic"
      >
        <Icon name="mdi:scroll-text" class="w-5 h-5" />
        Descargar Hoja de Personaje
      </a>
    </div>
  </div>
</section>
