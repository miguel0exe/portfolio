---
// src/components/Hero.astro
import { Icon } from "astro-icon/components";
---

<section
  id="inicio"
  class="relative min-h-[90vh] flex items-center justify-center overflow-hidden bg-slate-950 text-white px-6"
>
  <div
    class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_110%)]"
  >
  </div>

  <div class="relative z-10 max-w-4xl mx-auto text-center">
    <span
      class="inline-block py-1 px-3 rounded-full bg-blue-500/10 text-blue-300 text-sm font-medium mb-6 border border-blue-500/20"
    >
      Ingeniero en Computación • CDMX
    </span>

    <h1
      class="text-5xl md:text-7xl font-bold tracking-tight mb-6 bg-clip-text text-transparent bg-gradient-to-b from-white to-slate-400 leading-tight"
    >
      Miguel Ángel <br class="hidden md:block" /> Martínez
    </h1>

    <p
      class="text-xl md:text-2xl text-slate-300 mb-8 leading-relaxed max-w-3xl mx-auto"
    >
      Desarrollador <span class="text-blue-400 font-semibold">Full Stack</span> especializado
      en la construcción de software empresarial complejo y sitios de alto tráfico.
    </p>

    <div
      class="flex flex-wrap justify-center items-center gap-4 mb-12 text-slate-400 font-mono text-sm md:text-base"
    >
      <span class="flex items-center gap-2">
        <Icon name="mdi:language-java" class="w-6 h-6 text-orange-500" /> Java & Spring
        Boot
      </span>
      <span class="hidden md:inline">|</span>
      <span class="flex items-center gap-2">
        <Icon name="mdi:react" class="w-6 h-6 text-blue-400" /> React & Next.js
      </span>
      <span class="hidden md:inline">|</span>
      <span class="flex items-center gap-2">
        <Icon name="mdi:database" class="w-6 h-6 text-yellow-500" /> SQL & Microservicios
      </span>
    </div>

    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a
        href="#experiencia"
        class="px-8 py-4 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold transition-all flex items-center justify-center gap-2 shadow-lg shadow-blue-500/25"
      >
        Ver Experiencia
        <Icon name="mdi:arrow-down" class="w-5 h-5 animate-bounce" />
      </a>
      <a
        href="/cv-miguel-martinez.pdf"
        download="CV_Miguel_Angel_Martinez.pdf"
        class="px-8 py-4 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-200 font-semibold transition-all border border-slate-700 flex items-center justify-center gap-2"
      >
        <Icon name="mdi:file-document-outline" class="w-5 h-5 text-slate-400" />
        Descargar CV
      </a>
    </div>

    <div class="mt-12 flex justify-center gap-6">
      <a
        href="mailto:miguelemazero@gmail.com"
        class="text-slate-400 hover:text-blue-400 transition-colors"
      >
        <span class="sr-only">Email</span>
        <Icon name="mdi:email-outline" class="w-7 h-7" />
      </a>
      <a
        href="https://github.com/miguel0exe"
        target="_blank"
        class="text-slate-400 hover:text-white transition-colors"
      >
        <span class="sr-only">GitHub</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="28"
          height="28"
          viewBox="0 0 24 24"
          ><path
            fill="currentColor"
            d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 7.5 9.71c.5.09.68-.22.68-.48c0-.24-.01-.87-.01-1.71c-2.78.6-3.37-1.34-3.37-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.89 1.52 2.34 1.08 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85c0 1.34-.01 2.42-.01 2.74c0 .26.18.57.69.48A10 10 0 0 0 22 12A10 10 0 0 0 12 2Z"
          ></path></svg
        >
      </a>
    </div>
  </div>
</section>
